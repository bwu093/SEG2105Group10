<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.segproject">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SEGProject"
        tools:targetApi="31">
        <activity
            android:name=".WelcomePage"
            android:exported="true"
            android:theme="@style/Theme.AppCompat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginPage"
            android:theme="@style/Theme.AppCompat">
        </activity>
        <activity android:name=".RegistrationPage"
            android:theme="@style/Theme.AppCompat">
        </activity>
        <activity android:name=".RegistrationPageForDoctor"
            android:theme="@style/Theme.AppCompat">
        </activity>
        <activity android:name=".RegistrationPageForPatient"
            android:theme="@style/Theme.AppCompat">
        </activity>
        <activity android:name=".AfterLoginPage"
            android:theme="@style/Theme.AppCompat">
    </activity>
    </application>

</manifest>